{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-extra-semi": "error"
    },
    "env": {
        "browser": true,
        "mocha": false,
        "node": false
    },
    "globals": {
        "expect": true
    },
    "extends": "eslint:recommended"
}
